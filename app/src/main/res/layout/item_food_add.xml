<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_ordinary"
    app:shapeAppearance="@style/ShapeAppearance.FoodAdditive.MediumComponent"
    app:cardBackgroundColor="@color/green_200"
    app:strokeWidth="@dimen/stroke_width"
    app:strokeColor="?attr/colorOnPrimary"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/food_add_number_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimaryVariant"
            android:paddingStart="@dimen/padding_ordinary"
            android:paddingEnd="@dimen/padding_small"
            android:paddingTop="@dimen/padding_ordinary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="?attr/colorOnPrimary"
            tools:text="E100" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food_add_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                tools:text = "Куркумины"/>

            <TextView
                android:id="@+id/food_add_origin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                tools:text = "Растительное Происхождение"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>