<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.FoodAdditive.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_size</item>
    </style>

    <style name="TextAppearance.FoodAdditive.SubTitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.FoodAdditive.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/green_700</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.FoodAdditive.Button</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MaterialAlertDialog.FoodAdditives.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/MaterialAlertDialog.FoodAdditives.Body.Text
        </item>
    </style>

    <style name="MaterialAlertDialog.FoodAdditives.Title.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialAlertDialog.FoodAdditives.Body.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.FoodAdditive.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>